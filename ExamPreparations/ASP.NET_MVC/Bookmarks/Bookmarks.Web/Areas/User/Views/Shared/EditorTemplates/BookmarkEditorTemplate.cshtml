@model Bookmarks.Web.Areas.User.Models.EditorModels.BookmarkEditorModel

@using (Html.BeginForm("AddBookmark", "Home", new {area="User"}, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(b => b.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(b => b.Title, new {@class = "form-control"})
            @Html.ValidationMessageFor(b => b.Title, "", new { @class = "text-danger" })
        </div>
       
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Url, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(b => b.Url, new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.Url,"", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(b => b.Description, new {@class = "form-control"})
        </div>
        @Html.ValidationMessageFor(b=>b.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.CategoryId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(b => b.CategoryId, (IEnumerable<SelectListItem>)this.ViewBag.Categories )
        </div>
        @Html.ValidationMessageFor(b => b.CategoryId)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add Bookmark" />
        </div>
    </div>
}



